<span class="n">urlpatterns</span> <span class="o">=</span> <span class="p">[</span>

    <span class="n">path</span><span class="p">(</span><span class="s">'posts/new/'</span><span class="p">,</span> <span class="n">views</span><span class="p">.</span><span class="n">PostCreateView</span><span class="p">.</span><span class="n">as_view</span><span class="p">(),</span> <span class="n">name</span><span class="o">=</span><span class="s">'post-create'</span><span class="p">)</span>
